<% if !flash[:notice].blank? %>
  <div class = "alert alert-info">
    <%= flash[:notice] %>
  </div>
<% end %>

<br />

<%= link_to "Загрузить файл", new_resume_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
  <thead>
  <tr>
    <th>Название</th>
    <th>Скачать файл</th>
    <th> </th>
  </tr>
  </thead>

  <tbody>
  <% @resumes.each do |resume| %>

    <tr>
      <td><%= resume.name %></td>
      <td><%= link_to "Скачать", resume.attachment_url %></td>
      <td><%= button_to "Удалить",  resume, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{resume.name}?" %></td>
    </tr>

  <% end %>
  </tbody>

</table>